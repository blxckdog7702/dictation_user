<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cbnu.sweng.randombox.dictation_user.dictation_user.ui.exam.ExamResultDetailedPage"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/result_detailed">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="120dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 답안"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="150dp"
                android:layout_height="3dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCandWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#38614e"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/tvStudentAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="120dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모범 답안"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="150dp"
                android:layout_height="3dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/tvCorrectAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tvTable1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맞춤법"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/tvTable2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="띄어쓰기"
                android:textColor="#1DDB16"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/tvTable3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="표준어 의심단어"
                android:textColor="#5F00FF"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivRedCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/red_circle"
        android:layout_gravity="center"
        android:visibility="invisible"/>
    </FrameLayout>
</LinearLayout>
