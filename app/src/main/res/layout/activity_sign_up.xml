<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cbnu.sweng.randombox.dictation_user.dictation_user.ui.sign.SignUpActivity"
    android:background="@drawable/signin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000">

    <include layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/etStudentNameUp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/signedittext"
        android:paddingLeft="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="2.0dip"
        android:hint="이  름"
        android:imeOptions="actionNext"
        android:layout_above="@+id/etSchoolNameUp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="10dp">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etSchoolNameUp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/signedittext"
        android:paddingLeft="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="20.0dip"
        android:hint="학  교"
        android:imeOptions="actionDone"
        android:focusable="false"
        android:drawableLeft="@drawable/ic_school"
        android:drawablePadding="10dp"
        android:layout_above="@+id/etStudentInfoUp"
        android:layout_alignStart="@+id/etStudentNameUp" />

    <EditText
        android:id="@+id/etStudentInfoUp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/signedittext"
        android:paddingLeft="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:hint="학년 | 반 | 출석번호"
        android:layout_above="@+id/etTeacherNameUp"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:focusable="false"
        android:drawableLeft="@drawable/ic_info"
        android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/etTeacherNameUp"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/signedittext"
            android:hint="선생님 아이디"
            android:imeOptions="actionNext"
            android:paddingLeft="20.0dip"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:drawableLeft="@drawable/ic_teacher"
            android:drawablePadding="10dp"
            android:layout_above="@+id/btSignUp"
            android:layout_alignStart="@+id/layout">
            <requestFocus />
        </EditText>

    <Button
        android:id="@+id/btSignUp"
        android:textSize="@dimen/text_size"
        android:textColor="#FFFFFF"
        android:background="@drawable/signbutton"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="60.0dip"
        android:text="가입하기"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

        </RelativeLayout>

</LinearLayout>

