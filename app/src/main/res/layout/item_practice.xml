<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="8dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:id="@+id/lrPractice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1FA2F0"
            android:gravity="center_horizontal"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:textAlignment="center"
                android:text="TEST"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivPractice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Assigned delivery boy"
            android:scaleType="fitXY"
            android:src="@drawable/practice1"
            android:layout_weight="6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tvPracticeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="It is just an example!"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:textAlignment="center"/>

        </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>