<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.cbnu.sweng.randombox.dictation_user.dictation_user.ui.exam.ReadyPage"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/readypage">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#88000000"
            android:layout_weight="1">
            <com.skyfishjy.library.RippleBackground
                android:id="@+id/rbRippleBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                app:rb_color="#0099CC"
                app:rb_radius="32dp"
                app:rb_rippleAmount="6"
                app:rb_duration="3000"
                app:rb_scale="6">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/ivStudentPhone"
                    android:src="@drawable/phone1"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/ivTeacherPhone"
                    android:src="@drawable/phone2"
                    android:visibility="invisible"
                    android:layout_below="@+id/ivStudentPhone"
                    android:layout_toStartOf="@+id/ivStudentPhone"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="60dp" />
                <LinearLayout
                    android:id="@+id/llhideContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:weightSum="3"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivTeacher"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:src="@drawable/profile"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#000000"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:visibility="invisible"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTeacherSchoolName"
                                android:textSize="25sp"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:background="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvTeacherName"
                                android:textSize="@dimen/text_size"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:background="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:weightSum="3"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivStudent"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:src="@drawable/profile"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#000000"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvStudentSchoolName"
                                android:textSize="25sp"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:background="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvStudentName"
                                android:textSize="@dimen/text_size"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:background="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <com.dd.processbutton.iml.ActionProcessButton
                    android:id="@+id/btExamReady"
                    android:layout_width="150dp"
                    android:layout_height="40.0dip"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="16dp"
                    android:text="준비하기"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size"
                    custom:pb_colorComplete="@color/green_complete"
                    custom:pb_colorNormal="@color/blue_normal"
                    custom:pb_colorPressed="@color/blue_pressed"
                    custom:pb_colorProgress="@color/purple_progress"
                    custom:pb_textComplete="Success"
                    custom:pb_textProgress="시험 준비중....."
                    custom:pb_textError="Error"
                    custom:pb_colorError="@color/red_error"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#88000000">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvReady"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
