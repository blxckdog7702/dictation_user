<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/exam_result"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/float_transparent"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gradeboard"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/ivScore"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center|bottom" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:background="#8a4f3f" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultOne"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            fbutton:buttonColor="@color/fbutton_color_wisteria"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeOne"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_ok" />
                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultTwo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="2"
                            android:textColor="@android:color/white"
                            fbutton:buttonColor="@color/fbutton_color_belize_hole"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeTwo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_no" />
                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultThree"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            fbutton:buttonColor="@color/fbutton_color_green_sea"
                            android:text="3"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeThree"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_no" />
                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultFour"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                            android:text="4"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeFour"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_no" />
                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultFive"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            fbutton:buttonColor="@color/fbutton_color_alizarin"
                            android:text="5"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeFive"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_no" />
                    </LinearLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#8a4f3f" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#8a4f3f" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:weightSum="10">
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultSix"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="6"
                            android:textColor="@android:color/white"
                            fbutton:buttonColor="@color/fbutton_color_asbestos"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeSix"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_no" />
                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultSeven"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="7"
                            android:textColor="@android:color/white"
                            fbutton:buttonColor="@color/fbutton_color_sun_flower"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeSeven"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_no" />
                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultEight"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="8"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:buttonColor="@color/fbutton_color_carrot"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeEight"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_no" />
                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultNine"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            fbutton:buttonColor="@color/fbutton_color_silver"
                            android:text="9"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeNine"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_no" />
                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="#8a4f3f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btResultTen"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            fbutton:buttonColor="@color/fbutton_default_shadow_color"
                            android:text="10"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/bt_result_text_size"
                            fbutton:cornerRadius="15dp"
                            fbutton:shadowEnabled="true"
                            fbutton:shadowHeight="6dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#8a4f3f" />

                        <ImageView
                            android:id="@+id/ivGradeTen"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_check_no" />
                    </LinearLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#8a4f3f" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#8a4f3f" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="345dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
